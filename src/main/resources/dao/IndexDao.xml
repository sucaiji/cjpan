<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sucaiji.cjpan.dao.IndexDao">

    <resultMap id="index" type="com.sucaiji.cjpan.model.IndexModel" >
        <result column="uuid" property="uuid"/>
        <result column="parent_uuid" property="parentUuid"/>
        <result column="name" property="name"/>
        <result column="suffix" property="suffix"/>
        <result column="type" property="type"/>
        <result column="is_dir" property="wasDir"/>
        <result column="l_update" property="lastUpdate"/>
        <result column="size" property="size"/>
    </resultMap>

    <sql id="BaseSql">
        uuid,
        parent_uuid,
        name,
        suffix,
        type,
        is_dir,
        l_update,
        size
    </sql>

    <select id="get" resultMap="index">
        SELECT
        <include refid="BaseSql"/>
        FROM
        indexs
        WHERE uuid = #{uuid}

    </select>

    <insert id="insertIndex" parameterType="com.sucaiji.cjpan.model.IndexModel">
        INSERT INTO indexs
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                uuid,
            </if>
            <if test="parentUuid != null">
                parent_uuid,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="suffix != null">
                suffix,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="wasDir != null">
                is_dir,
            </if>
            <if test="lastUpdate != null">
                l_update,
            </if>
            <if test="size != null">
                size,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                #{uuid},
            </if>
            <if test="parentUuid != null">
                #{parentUuid},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="suffix != null">
                #{suffix},
            </if>
            <if test="type != null">
                #{type},
            </if>
            <if test="wasDir != null">
                #{wasDir},
            </if>
            <if test="lastUpdate != null">
                #{lastUpdate},
            </if>
            <if test="size != null">
                #{size},
            </if>
        </trim>
    </insert>
    
    <select id="fuzzySelectIndex" resultMap="index">
        SELECT
        <include refid="BaseSql"/>
        FROM indexs
        WHERE name LIKE concat('%',#{name,jdbcType=VARCHAR},'%')
    </select>



    <select id="selectIndex" resultMap="index">
        SELECT
            <include refid="BaseSql"/>
        FROM
            indexs
        WHERE 1=1
        <if test="uuid != null">
            and uuid = #{uuid}
        </if>
        <if test="parentUuid != null">
            and parent_uuid = #{parentUuid}
        </if>
        <if test="name != null">
            and name = #{name}
        </if>
        <if test="suffix != null">
            and suffix = #{suffix}
        </if>
        <if test="type != null">
            and type = #{type}
        </if>
        <if test="wasDir != null">
            and is_dir = #{wasDir}
        </if>
        <if test="lastUpdate != null">
            and l_update = #{lastUpdate}
        </if>
        <if test="size != null">
            and size = #{size}
        </if>
    </select>

    <update id="updateIndex" parameterType="com.sucaiji.cjpan.model.IndexModel">
        UPDATE indexs
        <set>
            <if test="parentUuid != null">
                parent_uuid = #{parentUuid},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="suffix != null">
                suffix = #{suffix},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="wasDir != null">
                is_dir = #{wasDir},
            </if>
            <if test="lastUpdate != null">
                l_update = #{lastUpdate},
            </if>
            <if test="size != null">
                size = #{size},
            </if>
        </set>
        WHERE uuid = #{uuid}
    </update>

    <delete id="deleteByUuid">
        DELETE FROM indexs WHERE uuid = #{uuid}
    </delete>

</mapper>